{
  "manifest_version": 3,
  "name": "DD APM Test Agent - LLM Observability",
  "version": "1.0.0",
  "description": "Redirects LLM Observability requests from Datadog UI to local test agent",
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://*.datadoghq.com/*",
    "*://*.datadoghq.eu/*",
    "*://*.datad0g.com/*",
    "*://*.ddog-gov.com/*",
    "http://localhost:*/*",
    "http://127.0.0.1:*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.datadoghq.com/*",
        "*://*.datadoghq.eu/*",
        "*://*.datad0g.com/*",
        "*://*.ddog-gov.com/*"
      ],
      "js": ["interceptor.js"],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": [
        "*://*.datadoghq.com/*",
        "*://*.datadoghq.eu/*",
        "*://*.datad0g.com/*",
        "*://*.ddog-gov.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["interceptor.js"],
      "matches": [
        "*://*.datadoghq.com/*",
        "*://*.datadoghq.eu/*",
        "*://*.datad0g.com/*",
        "*://*.ddog-gov.com/*"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
